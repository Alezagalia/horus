# ===========================================
# Horus Frontend - Production Dockerfile
# Placed at root for Railway service detection
# ===========================================

# Build stage
FROM node:20-alpine AS builder

RUN corepack enable && corepack prepare pnpm@10.18.3 --activate

WORKDIR /app

# Copy workspace files
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./
COPY apps/web/package.json ./apps/web/
COPY packages/shared/package.json ./packages/shared/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source
COPY packages/shared ./packages/shared
COPY apps/web ./apps/web
COPY tsconfig.base.json ./

# Build shared package
WORKDIR /app/packages/shared
RUN pnpm build

# Build frontend
WORKDIR /app/apps/web
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL
RUN pnpm build

# ===========================================
# Production stage - Express server
# ===========================================
FROM node:20-alpine

WORKDIR /app

# Copy built files and server
COPY --from=builder /app/apps/web/dist ./dist
COPY --from=builder /app/apps/web/server.js ./
COPY --from=builder /app/apps/web/package.json ./

# Install only express
RUN npm install express@4.21.0

EXPOSE 80
ENV PORT=80
ENV NODE_ENV=production

CMD ["node", "server.js"]
