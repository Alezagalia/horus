{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@hooks/*": ["src/hooks/*"],
      "@horus/shared": ["../../packages/shared/src/index.ts"]
    }
  },
  "include": ["src/**/*", "App.tsx"],
  "exclude": ["node_modules", "dist", "tests", "babel.config.js", "metro.config.js"]
}
